<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="@string/btnSrchFamille"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSrchFamille"
            android:layout_alignParentTop="true"
            android:layout_marginTop="74dp"
            android:layout_alignEnd="@+id/btnSrchMedic"
            android:layout_alignStart="@+id/btnSrchMedic" />

        <Button
            android:text="@string/btnSrchMedic"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSrchMedic"
            android:layout_below="@+id/btnSrchFamille"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp" />
    </RelativeLayout>

</LinearLayout>