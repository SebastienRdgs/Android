<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAjouterFamille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:text="@string/btnAjouterFam"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/btnModifFamille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnModifierFam"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btnAjouterFamille" />

        <TextView
            android:id="@+id/textviewfamille"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toEndOf="@+id/btnModifFamille"
            android:text="Listes des familles :" />
    </RelativeLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listViewFamille" />
</LinearLayout>